float $radius = 7;

for($x = 0; $x < 360; $x++)
{
    select pfxHair1;
    rotate -y 0;
    move -x 0 -z 0;
    
    float $moveX = $radius + cos(deg_to_rad($x));
    float $moveZ = $radius + sin(deg_to_rad($x));
    
    float $rotationY = deg_to_rad($x);
    
    rotate -y $rotationY;
    move -x $moveX -z $moveZ;
    
    duplicate pfxHair1;
};